{
    "extends": [
        "config:base",
        ":disableDependencyDashboard",
        "schedule:monthly"
    ],
    "rangeStrategy": "replace",
    "packageRules": [
        {
            "matchPackageNames": ["node", "typescript", "pta", "zora"],
            "enabled": false
        },
        {
            "matchDepTypes": ["devDependencies"],
            "groupName": "dev dependencies",
            "rangeStrategy": "bump",
            "separateMajorMinor": false
        }
    ],
    "prHourlyLimit": 999
}
